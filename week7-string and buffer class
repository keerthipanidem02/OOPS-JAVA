System.out.println("enter string to append and insert");
String s2=s.nextLine();
StringBuffer sb1=new StringBuffer(s2);
System.out.println("after appending"+sb.append(sb1));
System.out.println("enter first and last index to delete");
int f=s.nextInt();
int e=s.nextInt();
System.out.println("after deleting string "+sb.delete(f,e));
System.out.println("after inserting string "+sb1+" string is : "+sb.insert(2,sb1));
System.out.println("after reversing :"+sb.reverse());
